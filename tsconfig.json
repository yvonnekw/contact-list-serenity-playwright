{
  "compilerOptions": {
    "lib": ["es2019", "dom"],
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "types": [
      "node"
    ]
  },

  "include": [
    "features/**/*.ts",
    "features/**/**/*.ts",
    "test/**/*.ts",
    "test/**/**/*.ts"
  ],

  "exclude": [
    "node_modules"
  ]
}
